<main>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <%@book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  
  
  <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">  
        <h1>Editing Book</h1>
      <%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
        <div class = "form-group">
          <label>Title</label>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
        <div class = "form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class: 'form-control book_title' %>
        </div>
        <div class = "form-group">
        <%= f.submit 'Update Book', class: "btn btn-secondary btn-lg btn-block" %>
        </div>
      <% end %>
      
      <%= link_to 'Show', book_path, class: 'show' %>
       | 
      <%= link_to 'Back', books_path, class: 'back' %>
     </div>   
    </div>
  </div>

</main>
<%= render '/layouts/footer' %>