<html>
  <body>
  <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody> <!-- データを入れるテーブル-->
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book.id), class: 'show' %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id),class: 'edit' %></td>
          <td><%= link_to 'Destroy', book_path(book.id), class: 'Destroy', method: :delete, "data-confirm" => "Are you sure？" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </body>
</html>