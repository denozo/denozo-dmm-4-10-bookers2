<div class="container">
 <div class="row">
  
  <div class="col-lg-4">
    <p>ここにUserinfo</p>
  </div>

  <div class="col-lg-8">
    <h1>Books</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody> <!-- データを入れるテーブル-->
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book.id), class: 'show' %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
 </div>
</div>