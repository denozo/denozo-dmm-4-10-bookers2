
<div class="container">
 <div class="row">
  <div class="col-lg-4">
    <%= render '/users/user_info', user: @user, book: @book %>
  </div> 
   
  <div class="col-lg-8">
    <h1>Book detail</h1>
    <table class="table table-hover">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40" %></td>
          <td><%= link_to @book1.title, book_path(@book1.id), class: 'show' %></td>
          <td><%= @book1.body %></td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Edit', edit_book_path(@book1.id),class: 'tn btn-sm btn-success edit' %>
            <% end %>
          </td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Destroy', book_path(@book1.id), class: 'btn btn-sm btn-danger Destroy', method: :delete, "data-confirm" => "本当に消しますか？？" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
 </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <footer><%= render '/layouts/footer' %></footer>
    </div>
  </div>
</div>