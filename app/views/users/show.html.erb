<div class="container">
  <%= render 'users/user_info', user: @user, book: @book %>
  <div class="row">
      <h2></h2>
      <table class="table table-striped">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book.id), class: 'show' %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Edit', edit_book_path(book.id),class: 'edit' %></td>
              <td><%= link_to 'Destroy', book_path(book.id), class: 'Destroy', method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>