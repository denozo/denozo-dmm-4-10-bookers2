<div class="container">
 <div class="row">
  
  <div class="col-lg-4">
    <%= render '/users/user_info', user: @user, book: @book %>
  </div>

  <div class="col-lg-8">
    <h1>Bools</h1>
    <table class="table table-hover">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book.id), class: 'show' %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  
 </div>
</div>