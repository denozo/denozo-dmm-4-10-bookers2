<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">  
    <h1>User info</h1>
  
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
          <ul>
            <%@user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      

      <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, autofocus: true, id:"user_name", plaxeholder:"名前",class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label></br>
            <%= f.attachment_field :profile_image, autofocus: true, id:"user_image" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_field :introduction, autofocus: true, id:"user_introduction", plaxeholder:"説明文を入力してください。", class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= f.submit 'Update User' %>
          </div>
        <% end %>
  
   </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <footer><%= render '/layouts/footer' %></footer>
    </div>
  </div>
</div>